@model Hocgido2T.Models.NguoiDung
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>
    <title>Hocgido</title>
    <!--CSS-->
    <link rel="stylesheet" href="~/Content/dashboard-admin.css" />
    <!--FONT AWESOME-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>
<body>
    <!--HEADER-->
    <header class="header">
        <div class="header__container">
            <img src="~/images/Logo_tron.png" alt="" class="header__img" />
            <a href="#" class="header__logo">Hocgido</a>

            <div class="header__toggle">
                <i class="fas fa-bars" id="header-toggle"></i>
            </div>
        </div>
    </header>
    <!--NAV-->
    <div class="nav" id="navbar">
        <nav class="nav__container">
            <div>
                <a href="#" class="nav__link nav__logo">
                    <img src="~/images/Logo_tron.png" class="nav__icon" />
                    <span class="nav__logo-name">Hocgido</span>
                </a>
                <div class="nav__list">
                    <div class="nav__items">
                        <h3 class="nav__subtitle">Manager</h3>
                        <a href="@Url.Action("MyProfile","AdminManage")" class="nav__link">
                            <i class="fas fa-id-card nav__icon"></i>
                            <span class="nav__name">Hồ sơ cá nhân</span>
                        </a>
                        <a href="@Url.Action("ManageUsers","AdminManage")" class="nav__link" id="btn_Quanlynd">
                            <i class="fas fa-user-graduate nav__icon"></i>
                            <span class="nav__name">Quản lý người dùng</span>
                        </a>
                        <a href="#" class="nav__link active">
                            <i class="fas fa-graduation-cap nav__icon"></i>
                            <span class="nav__name">Quản lý khóa học</span>
                        </a>
                        <a href="#" class="nav__link">
                            <i class="fas fa-copy nav__icon"></i>
                            <span class="nav__name">Quản lý bài viết</span>
                        </a>
                        <a href="#" class="nav__link">
                            <i class="fas fa-bell nav__icon"></i>
                            <span class="nav__name">Quản lý thông báo</span>
                        </a>
                    </div>
                </div>
            </div>
            <a href="#" id="btn_dangxuat" class="nav__link nav__logout">
                <i class="fas fa-sign-out-alt nav__icon"></i>
                <span class="nav__name">Đăng xuất</span>
            </a>
        </nav>
    </div>
    <div class="main">
            @RenderBody()
    </div>

    <!--MAIN JS-->
    <script src="~/Scripts/dashboard.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if (@Model.TaiKhoan.Quyen== "114") {
                $("#btn_Quanlynd").remove();
            }
        });
    </script>
</body>
</html>