@model Hocgido2T.Models.NguoiDung
@{
    ViewBag.Title = "Learn";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<link rel="stylesheet" href="~/Content/Learn.css" />
<!--video css-->
<link href="https://vjs.zencdn.net/7.15.4/video-js.css" rel="stylesheet" />
<!--video js-->
<script src="https://vjs.zencdn.net/7.15.4/video.min.js"></script>
<script src="~/Scripts/crypto-js.min.js"></script>
<script src="~/Scripts/aes.min.js"></script>
<link rel="stylesheet" href="~/Scripts/ckeditor/plugins/codesnippet/lib/highlight/styles/railscasts.css">
<script src="~/Scripts/highlight.min.js"></script>
<script>
    var userid = '@Model.MaND'
</script>
<script src="~/Scripts/LearnManage.js"></script>
<div class="container">


    <!--header-->
    <div class="bg d-flex mask-custom justify-content-center align-items-center">
    </div>
    <!--header end-->
    <!--head-->
    <div class="page-section banner-info">
        <!--breadcrumb-->
        <nav>
            <ol class="breadcrumb bg-white">
                <li class="breadcrumb-item"><i class="fas fa-home"></i></li>
                <li class="breadcrumb-item">Khóa học</li>
                <li class="breadcrumb-item tenkh"></li>
            </ol>
        </nav>
        <!--breadcrumb end-->
        <!--video-->
        <div class="row">
            <div class="col-xl-6">
                <div class="col-lg-12">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe width="500" height="455" src="https://www.youtube.com/embed/pUjOF9-dQCY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="table1 col-xl-6">
                <div class="list-group">
                    <div class="btn btn-dark">
                        <i class="fas fa-list"></i>
                        Danh sách bài học
                    </div>
                    <!--search-->
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Tìm kiếm..." aria-label="Search"
                               aria-describedby="search-addon" />
                        <span class="input-group-text border-0" id="search-addon">
                            <i class="fas fa-search"></i>
                        </span>
                    </div>
                    <!--search end-->
                    <!--scroll-->
                    <div data-spy="scroll" id="danhsachbh" style="height: 235px; overflow-y: scroll;" data-offset="0" class="scrollspy-example">


                    </div>
                    <!--scroll end-->
                </div>
            </div>
        </div>
        <!--video end-->
    </div>

    <!--learn-->
    <div class="page-section banner-info">
        <div class="list-group-item mt-3">
            <h4 class="title-section tenkh" style="font-weight: bold;"><i class="fas fa-code"></i> </h4>
        </div>
        <div class="list-group-item" id="lythuyet">
        </div>
        <div class="list-group-item" id="codemau">

        </div>
    </div>
    <div class="list-group-item mt-3">
        <h5 class="title-section" style="font-weight: bold;">Bình luận</h5>
        <div id="binhluan" data-spy="scroll" style="height: 300px; overflow-y: scroll;" data-offset="0">
        </div>
        <hr />
        <div class="media">
            <div class="media-left">
                <img src="~/images/buffalo.png" alt="" class="header__img" />
            </div>
            <div style="margin-left:15px" class="media-body">
                <textarea id="comment_text" class="form-control" cols="2" placeholder="Thêm bình luận..." rows="4"></textarea>
                <button  onclick="comment_post()" type="button" class="btn btn-outline-primary mt-3" data-mdb-ripple-color="primary">Nhận xét</button>
            </div>
        </div>
    </div>
</div>

