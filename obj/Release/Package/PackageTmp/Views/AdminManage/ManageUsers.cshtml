
@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_DashboardAdmin.cshtml";
}
<script src="~/Scripts/manage-users.js"></script>


<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <h2 style="text-align:center">Danh sách người dùng </h2>
        <nav class="navbar ">
            <div class="col-lg-1">
                <i class="fas fa-users" id="count"></i>
            </div>
            <div class="col-lg-2">
                <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#register_user">
                    <i class="fas fa-user-plus"></i>
                    Đăng ký
                </button>
            </div>
            <div class="input-group col-lg-6">
                <input type="text" class="form-control" placeholder="Tên tài khoản...">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i></button>
                </div>
            </div>
            <div class="col-lg-3 ">
                <select class="custom-select" id="select_quyen">
                    <option value="">Lọc danh sách...</option>
                    <option value="115">Học viên</option>
                    <option value="114">Giáo Viên</option>
                    <option value="113">Admin</option>
                </select>
            </div>

        </nav>
    </div>
    <div class="col-lg-2"></div>
</div>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="table-responsive table-sm col-lg-8" style="height:500px">
        <table class="table table-bordered table-hover table-fixed" id="table_users">
            <thead style="text-align:center;">
                <tr>
                    <th>#</th>
                    <th>Tên tài khoản</th>
                    <th>Số điện thoại</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tbody id="tbl_users" style=" overflow-y:auto ">
            </tbody>
        </table>
    </div>
    <div class="col-lg-2"></div>
</div>

<!-- Modal thông tin chi tiết -->
<div class="modal fade " id="form_user_information" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Thông tin tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="wrap">
                    <label>Họ tên</label>
                    <input class="form-control" type="text" id="txt_fullname" />
                    <span class="focus-input"></span>
                </div>

                <div class="wrap">
                    <label>Ngày sinh</label>
                    <input class="form-control" type="date" id="datepicker" />
                    <span class="focus-input"></span>
                </div>
                <div class="wrap">
                    <label>Số điện thoại</label>
                    <input class="form-control" type="text" id="txt_phone" />
                    <span class="focus-input"></span>
                </div>
                <div class="wrap">
                    <label>Địa chỉ</label>
                    <input class="form-control" type="text" id="txt_address" />
                    <span class="focus-input"></span>
                </div>
                <div class="wrap">
                    <label>Email</label>
                    <input class="form-control" type="email" id="txt_email" />
                    <span class="focus-input"></span>
                </div>
                <div class="wrap">
                    <label>Tên tài khoản</label>
                    <input class="form-control" type="text" id="txt_username" />
                    <span class="focus-input"></span>
                </div>
                <div class="wrap">
                    <label>Mật khẩu</label>
                    <input class="form-control" type="password" id="txt_password" />
                    <span class="focus-input"></span>
                </div>

                <label>Quyền</label>
                <select class="custom-select" id="select_quyen">
                    <option value="115" id="115" >Học viên</option>
                    <option value="114" id="114" >Giáo Viên</option>
                    <option value="113" id="113" >Admin</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="save()">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Đăng ký tài khoản -->

<div class="modal fade " id="register_user" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
