
@{
    ViewBag.Title = "ManageCourse";
    Layout = "~/Views/Shared/_DashboardAdmin.cshtml";
}

<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">

<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>

<div class="container content">
    <h2 style="text-align:center">Quản lý khóa học</h2>
    <div class="row">
        <div class="col-lg-7">
            <h5 style="text-align:center">Danh sách khóa học </h5>
            
            <div class="row">
                <table class="table table-hover"
                       id="table_course"
                       data-toggle="table"
                       data-height="540"
                       data-ajax="get_course"
                       data-show-refresh="true"
                       data-search="true"
                       data-buttons="custom_btn"
                       data-pagination="true"
                       data-page-list="[10, 25, 50, 100, 200, All]"
                       data-url="../api/ds_khoahoc">
                    <thead>
                        <tr>
                            <th  data-field="TenKH" >Tên khóa học</th>
                            <th  data-field="MoTaKH">Mô tả</th>
                            <th  data-field="LuotDK">Sub</th>
                        </tr>
                    </thead>
                   
                </table>
            </div>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
            <h5 style="text-align:center">Danh sách bài học </h5>

            <div class="row">
               
                <table class="table table-hover"
                       id="table_chapter"
                       data-toggle="table"
                       data-height="540"
                       data-search="true"
                       data-buttons="custom_btn"
                       data-pagination="true"
                       data-page-list="[10, 25, 50, 100, 200, All]">
                    <thead>
                        <tr>
                            <th data-field="GioiThieu">Bài học</th>
                            <th data-field="LuocHoc">#</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="coursemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titlecoursemodal">Thêm khóa học</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="wrap">
                    <label>Tên khóa học</label>
                    <input class="form-control" type="text" id="txt_tenkh" />
                    <span class="focus-input"></span>
                </div>
                <div class="wrap">
                    <label>Mô tả</label>
                    <input class="form-control" type="text" id="txt_motakh" />
                    <span class="focus-input"></span>
                </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary"  onclick="add_course()">Lưu</button>
            </div>
        </div>
    </div>
</div>



<script>

    function checknull() {
        if ($("#txt_tenkh").val() != "" && $("#txt_motakh").val() != "")
            return true
        else {
            swal("Lỗi ", "Đã có lỗi xảy ra !", "error");
            return false
        }
    }

    function clear_modal() {
        $("#txt_tenkh").val("")
        $("#txt_motakh").val("")
       
    }

 

    function add_course() {
        if (checknull()) {
            $.post("../api/themkhoahoc", { TenKH: $("#txt_tenkh").val(), MoTaKH: $("#txt_motakh").val() })
                .done(function (data) {
                    if (data.msg=="ok")
                        swal("Thông báo", "Thêm khóa học thành công", "success").then((value) => {
                            clear_modal()
                        });
                    else swal("Lỗi ", "Đã có lỗi xảy ra !" + data.msg, "error");
                })
                .fail(function (data) {
                    swal("Lỗi ", "Đã có lỗi xảy ra !" + data.msg, "error");
                });
        }
    }

            function get_course(params) {
                $.get("../api/ds_khoahoc").then(function (res) {
                    params.success(res.msg)
                })
            }

            function custom_btn() {
                return {
                    btn_themkh: {
                        html: '<button type="button" name="btn_themkh" data-toggle="modal" data-target="#coursemodal" class="btn btn-success"><i class="fa fas fa-plus"></i></button>',
                        event: () => {  
                        }
                        
                    }
                }
            }


    function get_chapter(id) {
        $.get("../api/ds_baihoc_kh?makh=" + id).then(function (res) {
            $("#table_chapter").bootstrapTable('removeAll')
            $("#table_chapter").bootstrapTable('append', res.msg)
        })
    }

    

    $(document).ready(function () {

        $("#table_course").on("click-row.bs.table", function (field, value, row, $el) {
            get_chapter(value.MaKH)

        });

    });
    


</script>